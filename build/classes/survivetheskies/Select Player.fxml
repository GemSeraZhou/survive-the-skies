               <image>
                  <Image url="/res/Red Jet.gif" />
               </image>
            </ImageView>
            <ImageView fitHeight="100.0" fitWidth="100.0" layoutX="525.0" layoutY="373.0" pickOnBounds="true" preserveRatio="true" style="-fx-rotate: 270;">
               <image>
                  <Image url="/res/Red Jet.gif" />
